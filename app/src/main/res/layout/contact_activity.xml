<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorAccent"
   >


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            />
    </android.support.design.widget.AppBarLayout>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:padding="50dp"
        android:layout_below="@+id/imageView2"
        android:textSize="15dp"
        android:text="Avenue de la concorde Roche Brunes," />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:text="Rose Hill MAURITIUS" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:textSize="15dp"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:text="tel:+2304660444"
        android:textColor="@color/white"
        android:autoLink = "all"
        android:textColorLink="@color/white"
        android:linksClickable="true"
       />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:text="Fax: +230 466 3774"
        android:autoLink = "all"
        android:textColorLink="@color/white"
        android:linksClickable="true"
        />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="15dp"
        android:autoLink = "all"
        android:linksClickable="true"
        android:textColorLink="@color/white"
        android:text="Email: udmcrh@udm.ac.mu"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBarLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/logo_udm" />

    <View
    android:layout_width="500dp"
    android:layout_height="7dp"
    android:layout_gravity="center"
    android:layout_marginTop="50sp"
        android:background="@color/colorPrimary"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/textView5"/>

</RelativeLayout>